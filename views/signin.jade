extends layout

block content
    div.container
        form.form-signin(role="form")
            h1 台北牛排點餐系統
            h2.form-signin-heading 請登入
            input.form-control(type="text", placeholder="帳號", required autofocus)
            input.form-control(type="password", placeholder="密碼", required)
            label.checkbox
                input(type="checkbox", value="remember-me")
                | 記住我
            button.btn.btn-lg.btn-primary.btn-block(type="submit") 登入
